{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "devCommand": null,
  "installCommand": "npm install",
  "framework": null,
  "public": true,
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/assets/(.*)", 
      "dest": "/assets/$1",
      "continue": true
    }
  ]
} 